<head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        a:hover {
            text-decoration: none;
        }
        .dot {
        height: 25px;
        width: 25px;
        background-color: rgba(60,60,60,0.1);
        border-radius: 50%;
        display: inline-block;
        text-align: center;
        }
        .circle {
        height: 25px;
        width: 25px;
        background-color: rgba(250,250,250,1);
        border-radius: 50%;
        display: inline-block;
        text-align: center;
        }
    </style>
</head>
<body>
    <div class='container un'>
        <% if(arr.length>0){ %>
            <h1 style="font-family: Georgia, 'Times New Roman', Times, serif;" class='mt-2 mb-3'>All Projects</h1>
            <br />
            <table class="table">
                <thead>
                <tr style="background-color: rgba(30,145,150); color: white;">
                    <th scope="col">S.N.</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">View Report</th>
                </tr>
                </thead>
                <tbody>
                    <% for(let i=0;i<arr.length;i++) { %>
                        <% if(i%2==0) { %>
                            <tr style="background-color: rgba(60,60,60,0.07);">
                                <th scope="row"><%= i+1 %></th>
                                <td><%=arr[i].title %></td>
                                <td><%=arr[i].description %></td>
                                <td><a href='/projreport/<%= arr[i].project_id %>'>Go to Report</a></td>
                            </tr>
                        <% } %>
                        <% if(i%2==1) { %>
                            <tr>
                                <th scope="row"><%= i+1 %></th>
                                <td><%=arr[i].title %></td>
                                <td><%=arr[i].description %></td>
                                <td><a href='/projreport/<%= arr[i].project_id %>'>Go to Report</a></td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        <% } %>
        <% if(arr.length===0){ %>
            <br />
            <h4 style="font-family: Georgia, 'Times New Roman', Times, serif;">No projects assigned yet...</h4>
        <% } %>
    </div>
</body>