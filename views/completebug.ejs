<html>
  <head>
    <title>Bug Remarks</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
    
    <style>
        body{
                margin:0;
                padding:0;
                background-position: center;
                font-family: sans-serif;
                z-index: 0;
                background-image: url('');
                background-color: rgb(255,255,202,0.75);
                background-size: cover;
            }
        #a{
            width: 68.5%;
            margin-top: 0px;
        }
        #b{
            width: 68.5%;
            border:0px solid rgba(255,255,255,0);
            margin-top: 0px;
            background-color: rgba(0,0,0,0);
            color: rgba(0,0,0,0);
        }
    </style>

    <!-- Add custom stylesheet here -->
  </head>
  <body style="margin-top: 20px;" onmouseover="checkform()">
    <h2 style="color: rgba(255,255,255,0);">Yo</h2>
    <h4 style="color: rgba(255,255,255,0);">Yo</h4>
    

    <div class="contact-background-image" style="margin-left: 270px; margin-bottom: 30px;z-index: 10;">
		<div class="ui container margin-bottom-30">
            <div class="ui container">
                <form class="ui form pad-top-30 pad-bottom-30" method='POST' action="/completebug/<%= id %>">
                    <div class="ui container margin-top-30">
                        <h2 class="huge header inverted" style="margin-bottom: 10px;">Bug Remarks:</h2>
                            <div class="field">
                                <label>Remarks/Solution</label>
                                <textarea placeholder='Type here....' style="width:300px; height: 40px;" name='remarks' id='remarks'></textarea>
                            </div>
                        <button class="ui primary button" id="submitbutton" style="color: cornsilk; background-color: cornflowerblue; margin-left: 34%; margin-top: 20px;" disabled="disabled">Submit</button>
                    </div>
                </form>
                <br />
            </div>	
		</div>
	</div>
    
  
    <!-- Write your html code here -->
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>
    <script> 
        $(document).ready(function(){
             $('.ui.dropdown') .dropdown();
       });
    </script>
    <script type="text/javascript" language="javascript">
        function checkform()
        {
            let a = document.getElementById('remarks').value.length;
            let cansubmit = true;
            if(a===0){
                cansubmit=false;
            }
    
            
    
            document.getElementById('submitbutton').disabled = !cansubmit;
        }
    </script> 
  </body>
</html>