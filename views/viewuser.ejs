<body style="background-color: #EEE8D559; z-index: 0;">
    <div class='container mt-5'>
        <h1 style="text-align: center; font-family: Georgia, 'Times New Roman', Times, serif;"><u>Viewing Information for <%= emp.name %></u></h1>
        <div class="mt-4" id='card' style="background-color: white;">
            <div class="card-block">
                <p class="card-text"><h3><i class="fa fa-envelope" aria-hidden="true"></i><b class="mr-2 ml-2">Email:</b></h3><span class="ml-4" style="font-size: 17.5px;"><%= emp.email %></span></p>
                <hr />
                <p class="card-text"><h3><i class="fa fa-phone" aria-hidden="true"></i><b class="mr-2 ml-2">Phone:</b></h3><span class="ml-4" style="font-size: 17.5px;"><%= emp.phone %></span></p>
                <hr />
                <p class="card-text"><h3><i class="fa fa-building" aria-hidden="true"></i><b class="mr-2 ml-2">Branch:</b></h3><span class="ml-4" style="font-size: 17.5px;"><%= emp.branch %></span></p>
                <hr />
                <p class="card-text"><h3><img src='data:image/png;base64,'  width="50" height="60" /><b>Experience:</b></h3><span class="ml-4" style="font-size: 17.5px;"><%= exp %></span></p>
                <hr />

                    <p class="card-text"><h3><i class="fa fa-bar-chart" aria-hidden="true"></i><b class="mr-2 ml-2">Work Statistics:</b></h3></p>
                    <% if (d===0) { %>
                        <h5>Not yet worked on any project</h5>
                        <br />
                    <% } %>
                    <% if (d>0) { %>
                        <br class="mb-5"/>
                        <h5>Projects:</h5>
                        <div class='container mt-4' style="width:650px;">
                            <canvas id="myChart"></canvas>
                        </div>
                    <% } %>
                <div class="container">
                    <a href='/edit/employee/<%= emp.emp_id %>' style="display: inline;">Edit</a><span class="ml-2" style="color: rgba(30,30,30,0.6);">|</span>
                    <form method="=POST" action="/delete/employee/<%= emp.emp_id %>"  style="display: inline;">
                        <button id='del'>Delete</button>                    
                    </form>
                </div>
            </div>
            
        </div>
    </div>
    <h6 style="color: rgba(0,0,0,0);">Hello</h6>
    <a href='/' class="btn btn-success" style="margin-left: 18%;">Go Back</a>
    <h6 style="color: rgba(0,0,0,0);">Hello</h6>
    <hr class="mt-3 mb-3" />
    <h1 style="color: rgba(0,0,0,0);">Hello</h1>
    <script>
        let a = '<%= a %>';
        a=Number(a);
        let b = '<%= b %>';
        b=Number(b);
        //let c=one+two;
        let c = '<%= c %>';
        c=Number(c);
        let d = '<%= d %>';
        d=Number(d);
        let rem1=3-(d%3);
        d=d+rem1;
        var ctx = document.getElementById('myChart').getContext('2d');
        Chart.defaults.global.defaultFontFamily='Lato';
        Chart.defaults.global.defaultFontSize=18;
        Chart.defaults.global.defaultFontColor='#777';
        var chart = new Chart(ctx, {
            // The type of chart we want to create
            type: 'bar',

            // The data for our dataset
            data: {
                labels: ['Completed on Time','Late','Ongoing'],
                datasets: [{
                    label: 'Progress',
                    backgroundColor: ['rgba(57,255,20,0.6)','rgba(255, 99, 132,0.6)','rgba(255,191,0,0.6)'],
                    data: [c,a,b],
                    hoverBorderWidth:3,
                    hoverBorderColor:'rgba(30,35,35,0.7)'
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            suggestedMin: 0,
                            suggestedMax: d,
                            stepSize: 3
                        },
                        gridLines : {
                            display : false
                        }
                    }],
                    xAxes: [{
                        barPercentage: 0.3,
                        columnPercantage:0.5,
                        gridLines : {
                            display : false
                        }
                    }]
                },
                legend:{
                    display:false
                }
            }
        });        

    </script> 
</body>