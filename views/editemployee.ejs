<html>
  <head>
    <title>Add Employee</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
    
    <style>
        body{
                margin:0;
                padding:0;
                background-position: center;
                font-family: sans-serif;
                z-index: 0;
                background-image: url('');
                background-color: rgba(255,255,202,0.75);
                background-size: cover;
            }
        #a{
            width: 68.5%;
            margin-top: 0px;
        }
        #b{
            width: 68.5%;
            border:0px solid rgba(255,255,255,0);
            margin-top: 0px;
            background-color: rgba(0,0,0,0);
            color: rgba(0,0,0,0);
        }

        .dropdown{
            max-width: 100px;
        }
    </style>

    <!-- Add custom stylesheet here -->
  </head>
  <body style="margin-top: 20px;" onmouseover="checkform()">
    <h2 style="color: rgba(255,255,255,0);">Yo</h2>
    <h4 style="color: rgba(255,255,255,0);">Yo</h4>
    
    <% if(exist && exist.length>0){ %>
        <div class="ui container">
            <div class="ui teal message"><%= exist %></div>
        </div>
    <% } %>
    <% if(!exist || exist.length===0){ %>
        <div class="ui container">
            <h6 style="color: rgba(0,0,0,0);">Hi</h6>
        </div>
    <% } %>
    <br />
    <div class="contact-background-image" style="margin-left: 270px; margin-bottom: 30px;z-index: 10;">
		<div class="ui container margin-bottom-30">
            <div class="ui container">
                <form class="ui form pad-bottom-30" method='POST' action='/edit/employee/<%= emp.emp_id %>'>
                    <div class="ui container">
                        <h2 class="huge header inverted" style="margin-bottom: 10px; margin-left: 25%;">Edit Information for <%= emp.name %></h2>
                        <div class="field">
                            <label>Employee Name:</label>
                            <input type="text" id='name' name="name" placeholder="Name" style="width:300px; height: 40px;" onKeyup="checkform()" value="<%= emp.name %>">
                        </div>
                        <div class="field">
                            <label>Phone</label>
                            <input type="tel" id='phone' name="phone" placeholder="10 digit phone number" style="width:300px; height: 40px;" onKeyup="checkform()" pattern="[0-9]{10}" value=<%= emp.phone %>>
                        </div>
                        <div class="field">
                            <label>Branch:</label>
                            <div class="ui selection dropdown">
                                        <input type="hidden" name="branch" id='branch' style="width: 60%;" onmouseover="checkform()" onclick="checkform()" value=<%= emp.branch %>>
                                        <i class="dropdown icon"></i>
                                        <div class="default text">Branch</div>
                                        <div class="menu">
                                            <div class="item" data-value="Banglore">Banglore</div>
                                            <div class="item" data-value="Pune">Pune</div>
                                            <div class="item" data-value="Hyderabad">Hyderabad</div>
                                            <div class="item" data-value="Gurgaon">Gurgaon</div>
                                        </div>    
                            </div>
                        </div>
                        <button class="ui primary button" id="submitbutton" style="color: cornsilk; background-color: cornflowerblue; margin-left: 34%; margin-top: 20px;" disabled="disabled">Edit</button>
                    </div>
                </form>
                <br />
            </div>	
		</div>
	</div>
    
  
    <!-- Write your html code here -->
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>
    <script> 
        $(document).ready(function(){
             $('.ui.dropdown') .dropdown();
       });
    </script>
    <script type="text/javascript" language="javascript">
        function checkform()
        {
            const f = document.getElementById('name').value.length;
            const e = document.getElementById('branch').value.length;
            const h = document.getElementById('phone').value.length;
            let cansubmit = true;
            if(e*f*h===0){
                cansubmit=false;
            }
    
            
    
            document.getElementById('submitbutton').disabled = !cansubmit;
        }
    </script> 
  </body>
</html>